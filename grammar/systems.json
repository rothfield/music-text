{
  "systems": {
    "sargam": {
      "pitch_rule": "sargam_pitch",
      "pitch_definition": "(\"S\" | \"R\" | \"G\" | \"M\" | \"P\" | \"D\" | \"N\" | \"s\" | \"r\" | \"g\" | \"m\" | \"p\" | \"d\" | \"n\") ~ flat_or_sharp?",
      "description": "Indian classical notation"
    },
    "number": {
      "pitch_rule": "number_pitch", 
      "pitch_definition": "ASCII_DIGIT ~ flat_or_sharp?",
      "description": "Numeric notation (1-7)"
    },
    "western": {
      "pitch_rule": "western_pitch",
      "pitch_definition": "(\"C\" | \"D\" | \"E\" | \"F\" | \"G\" | \"A\" | \"B\") ~ flat_or_sharp?",
      "description": "Western notation (C-B)"
    },
    "abc": {
      "pitch_rule": "abc_pitch",
      "pitch_definition": "(\"C\" | \"D\" | \"E\" | \"F\" | \"G\" | \"A\" | \"B\" | \"c\" | \"d\" | \"e\" | \"f\" | \"g\" | \"a\" | \"b\") ~ flat_or_sharp?",
      "description": "ABC notation (with octaves)"
    },
    "doremi": {
      "pitch_rule": "doremi_pitch",
      "pitch_definition": "(\"d\" | \"r\" | \"m\" | \"f\" | \"s\" | \"l\" | \"t\" | \"D\" | \"R\" | \"M\" | \"F\" | \"S\" | \"L\" | \"T\") ~ flat_or_sharp?",
      "description": "Doremi movable-do notation"
    }
  },
  "shared_rules": {
    "flat_or_sharp": "\"#\" | \"b\"",
    "dash": "\"-\"",
    "begin_slur": "\"(\"", 
    "end_slur": "\")\"",
    "breath_mark": "\"'\""
  }
}